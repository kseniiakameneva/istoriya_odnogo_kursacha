task2

public class Product {
	protected int id;
	protected String name;
	protected double price;
	protected String descr;
	protected String[categories]
}

class Electro extends Product{
	protected String type;
	protected Char[] chars;
}

class Char {
	String name;
	String value;
}












<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"> 
	<xsd:simpleType name="UnsignedDouble">
		<xsd:restriction base="xsd:double">
			<xsd:minInclusive value="0"></xsd:minInclusive>
		</xsd:restriction>
	</xsd:simpleType>
	
	<xsd:complexType name="Product">
		<xsd:sequence>
			<xsd:element name="id" type="xsd:int" minOccurs="0"></xsd:element>
			<xsd:element name="title" type="xsd:token"></xsd:element>
			<xsd:element name="price" type="UnsignedDouble"></xsd:element>
			<xsd:element name="description" type="xsd:string" minOccurs="0"></xsd:element>
			<xsd:element name="category" type="xsd:token" minOccurs="0" maxOccurs="unbounded"></xsd:element>
		</xsd:sequence>
	</xsd:complexType>

	<xsd:complexType name="Item">
		<xsd:sequence>
			<xsd:element name="product" type="Product"></xsd:element>
		</xsd:sequence>
	</xsd:complexType>
	
	<xsd:complexType name="Electro">
	   <xsd:complexContent>
	     <xsd:extension base="Product">
	       <xsd:sequence>
	         <xsd:element name="type" type="xsd:token"></xsd:element>
	         <xsd:group ref="Char" minOccurs="1"></xsd:group>
	       </xsd:sequence>
	     </xsd:extension>
	   </xsd:complexContent>
	</xsd:complexType>	
	
	<xsd:group name="Char">
		<xsd:sequence>
			<xsd:element name="name" type="xsd:token" minOccurs="1"></xsd:element>
			<xsd:element name="value" type="xsd:token" minOccurs="1"></xsd:element>
		</xsd:sequence>
	</xsd:group>
	
	<xsd:element name="product" type="Product"></xsd:element>
	<xsd:element name="item" type="Item"></xsd:element>
	<xsd:element name="electro" type="Electro"></xsd:element>
</xsd:schema>
